<main class="h-screen">
    <section class="mx-auto w-[40%] max-w-[40%] mt-8 content-start">
        <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 rounded-lg" id="notice">
            <%= notice %>
        </p>
        <% end %>
        <h1 class="font-bold text-2xl">Task Manager</h1>

        <div class="mt-4">
            <%= render "form", task: @task %>
        </div>

        <div class="px-5" data-controller="tasks">
            <%= render @tasks %>
        </div>
    </section>
</main>