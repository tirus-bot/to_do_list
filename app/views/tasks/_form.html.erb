<%= form_with model: task, class: "mb-7" do | form | %>
        <div class="mb-5">
            <%= form.text_field :title, 
            placeholder: "Add new task", 
            class: "w-96 px-3 py-2 mt-2 shadow-sm rounded-sm border border-gray-200" %>
            <%= form.submit "Save", class: "cursor-pointer py-2 px-4 ml-2 bg-blue-600 text-white" %>
        </div>
<% end %>